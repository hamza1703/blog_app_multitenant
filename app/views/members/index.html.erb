<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
<h1><%= t 'all_users' %></h1>
<table class="table table-striped text-center">
  <thead>
    <tr>
      <th><%= t 'table_title' %></th>
      <th><%= t 'table_action' %></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_member_path(user) %></td>
        <td><%= link_to 'Destroy', member_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @members %>
