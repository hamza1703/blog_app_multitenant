<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
<% if can? :update, @article %><%= link_to 'Edit', edit_article_path(@article) %> | <% end %> 
<%= link_to 'Back', articles_path %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.body %>
</p>
 
 <hr>
<h2 class="text-center"><%= t 'comments' %></h2>

<%= form_with(model: [ @article, Comment ], local: true) do |form| %>
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <div class="comment-box ml-2">
                <h4>Add a comment</h4>
                <%= form.hidden_field :commenter, :value => check_user_role %>
                <div class="comment-area"> <%= form.text_area :body %></div>
                <div class="comment-btns mt-2">
                    <div class="row">
                        <div class="col-6">
                            <div class="pull-right"> <button class="btn btn-success send btn-sm">Comment <i class="fa fa-long-arrow-right ml-1"></i></button> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% end %>

<%= render partial: @comments, locals: {article: @article} %>

 