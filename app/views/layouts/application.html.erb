<!DOCTYPE html>
<html>
  <head>
    <title>BlogAppMultitenant</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<% if User.current_user.present? %>
<nav class="navbar navbar-expand-md navbar-light bg-faded">
  <ul class="navbar-nav mx-auto">
    <li style="margin-right: 10px;" class="nav-item active text-center">
     <%= link_to 'My Blog', controller: 'articles',class: "nav-link mr-4"%>
    </li>
    <li style="margin-right: 10px;" class="nav-item text-center">
      <% if can? :create, @member %><%= link_to 'Add New User', new_member_path %><% end %> 
    </li>
    <li style="margin-right: 10px;" class="nav-item text-center">
     <% if can? :read, @member %><%= link_to 'View all users', members_path %><% end %>
    </li>
   
  </ul>

</nav>
<div style="margin-left:100px">
<% end %>
</div>
<div class="container align-items-center">
<%= render_breadcrumbs %> <br><br>

    <%= yield %>
  
</div>
  </body>
</html>
