<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center">
          <div class="user d-flex flex-row align-items-center"> <img src="https://i.imgur.com/hczKIze.jpg" width="30" class="user-img rounded-circle mr-2"> <span><small class="font-weight-bold text-primary"><%= comment.commenter %></small> <small class="font-weight-bold"><%= comment.body %></small></span> </div>
          <small>2 days ago</small></div>
        <div class="action d-flex justify-content-between mt-2 align-items-center">
          <div class="reply px-4"> <small><% if can? :destroy, comment %><%= link_to 'Remove', [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %><% end %></small>
          </div>
        </div>
      </div>
      <div>
      </div>
    </div>
  </div>
</div>
